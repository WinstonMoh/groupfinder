<div class="container" style="margin-top: 6%">
<%= form_for([@post, @comment]) do |f| %>
<p>
  <%= f.label :username %><br>
  <%= f.text_field(:username, {:class => 'form-control'}) %>
  </p>
  <p>
   <%= f.label :body %><br>
   <%= f.text_area(:body, {:class => 'form-control'}) %>
  </p>
  <p>
     <%= f.submit({:class => 'btn btn-default'}) %>
  </p>
<% end %>
</div>